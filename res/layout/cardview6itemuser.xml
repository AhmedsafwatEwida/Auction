<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#336b87"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardBackgroundColor="#336b87"
    card_view:cardMaxElevation="5dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/my_rounded_re">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VolleyImageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/VolleyImageView"
            android:src="@mipmap/ic_launcher" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VolleyImageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/VolleyImageView1"
            android:scaleType="fitXY"

            android:src="@mipmap/ic_launcher" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VolleyImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"

            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:id="@+id/idlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/IDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemid"
                android:textColor="#000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ImageIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_toEndOf="@+id/IDTextView"
                android:layout_toRightOf="@+id/IDTextView"
                android:layout_weight="1"
                android:gravity="left"
                android:text="JSon Image Name"
                android:textColor="#000"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/namelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/idlayout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemnamee"
                android:textColor="#000"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/ImageNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageIDTextView"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/nameTextView"
                android:layout_toRightOf="@+id/nameTextView"
                android:layout_weight="1"
                android:gravity="left"
                android:text="JSon Image price"
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pricelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/namelayout"
            android:layout_centerVertical="true"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemprice"
                android:textColor="#000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ImagepriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageNameTextView"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/priceTextView"
                android:layout_toRightOf="@+id/priceTextView"
                android:layout_weight="1"
                android:gravity="left"
                android:text="JSon Image price"
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/datelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/winlay"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemdate"
                android:textColor="#000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ImagebidateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImagewinTextView"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/dateTextView"
                android:layout_toRightOf="@+id/dateTextView"
                android:layout_weight="1"
                android:gravity="left"
                android:text="JSon Image ID"
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/datelay"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemtime"
                android:textColor="#000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ImagebidtimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImagebidateTextView"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/timeTextView"
                android:layout_toRightOf="@+id/timeTextView"
                android:layout_weight="1"
                android:gravity="left"
                android:text="JSon Image ID"
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statuslay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/timelay"
            android:layout_centerVertical="true"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemstatuse"
                android:textColor="#000"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/ImagestatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImagebidtimeTextView"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/statusTextView"
                android:layout_toRightOf="@+id/statusTextView"
                android:layout_weight="1"
                android:text="JSon Image ID"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/typelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/statuslay"
            android:layout_centerVertical="true"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemtype"
                android:textColor="#000"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/ImagetypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImagestatusTextView"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/typeTextView"
                android:layout_toRightOf="@+id/typeTextView"
                android:layout_weight="1"
                android:gravity="left"
                android:text="JSon Image price"
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auctionlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/typelay"
            android:layout_centerVertical="true"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/auctionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemauctione"
                android:textColor="#000"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/ImageauctionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImagetypeTextView"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/auctionTextView"
                android:layout_toRightOf="@+id/auctionTextView"
                android:layout_weight="1"
                android:gravity="left"
                android:text="JSon Image price"
                android:textColor="#000"
                android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/desclay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/auctionlay"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/descTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemdescriptione"
                android:textColor="#f1f1f2"
                android:textSize="10sp" />
        <TextView
            android:id="@+id/ImagedescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desclay"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon Image ID"
            android:textColor="#f1f1f2"
            android:textSize="10sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/ImagemakeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desclay"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon Image ID"
            android:textColor="#f1f1f2"
            android:textSize="5sp" />

        <TextView
            android:id="@+id/ImagemodelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImagemakeTextView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon Image price"
            android:textColor="#f1f1f2"
            android:textSize="5sp" />

        <TextView
            android:id="@+id/ImageyearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImagemodelTextView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon Image ID"
            android:textColor="#f1f1f2"
            android:textSize="5sp" />

        <TextView
            android:id="@+id/ImagewarnTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageyearTextView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon Image price"
            android:textColor="#f1f1f2"
            android:textSize="5sp" />

        <TextView
            android:id="@+id/ImagemillageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImagewarnTextView"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon Image ID"
            android:textColor="#f1f1f2"
            android:textSize="5sp" />

        <TextView
            android:id="@+id/ImageengineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImagemillageTextView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon Image ID"
            android:textColor="#f1f1f2"
            android:textSize="5sp" />
        <TextView
            android:id="@+id/Imageprice2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageengineTextView"
            android:layout_centerVertical="true"
            android:text="JSon Image ID"
            android:textColor="#000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/Imageprice3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imageprice2TextView"
            android:layout_centerVertical="true"
            android:text="JSon Image ID"
            android:textColor="#000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/Imageprice4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imageprice3TextView"
            android:layout_centerVertical="true"

            android:text="JSon Image ID"
            android:textColor="#000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/Imageprice5TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imageprice4TextView"
            android:layout_centerVertical="true"

            android:text="JSon Image ID"
            android:textColor="#000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/Imagewin2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageengineTextView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/Imageprice2TextView"
            android:layout_toRightOf="@+id/Imageprice2TextView"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:text="JSon Image ID"
            android:textColor="#000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/Imagewin3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imageprice2TextView"
            android:layout_centerVertical="true"
            android:text="JSon Image ID"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"

            android:layout_toEndOf="@+id/Imageprice3TextView"
            android:layout_toRightOf="@+id/Imageprice3TextView"
            android:textColor="#000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/Imagewin4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imageprice3TextView"
            android:layout_centerVertical="true"
            android:text="JSon Image ID"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/Imageprice4TextView"
            android:layout_toRightOf="@+id/Imageprice4TextView"
            android:textColor="#000"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/Imagewin5TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imageprice4TextView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/Imageprice5TextView"
            android:layout_toRightOf="@+id/Imageprice5TextView"
            android:text="JSon Image ID"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"

            android:textColor="#000"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/winlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:layout_below="@+id/pricelayout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/winTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="@string/itemwine"
                android:textColor="#000"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/ImagewinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImagepriceTextView"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:layout_weight="1"
                android:text="JSon Image ID"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>