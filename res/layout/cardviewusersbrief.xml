<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_rounded_re">

        <TextView
            android:id="@+id/ImageIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:text="JSon Image ID"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ImageemailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageIDTextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="JSon Image ID"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ImageMobileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageemailTextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="JSon Image price"
            android:textColor="#000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/ImageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageMobileTextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="JSon Image price"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ImagepaymenyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ImageemailTextView"
            android:text="JSon Image price"
            android:textColor="#f1f1f2"
            android:textSize="5dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Imagepaymeny2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ImageIDTextView"
            android:text="JSon Image price"
            android:textColor="#f1f1f2"
            android:textSize="5dp"
            android:visibility="visible" />


    </RelativeLayout>

</android.support.v7.widget.CardView>